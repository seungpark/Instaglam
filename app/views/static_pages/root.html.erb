<div id="content">
</div>

<script>
  var assets = {
    filledHeart: "<%= asset_path("filled-heart.png") %>",
    emptyHeart: "<%= asset_path("empty-heart.png") %>",
    bgimage: "<%= asset_path("signin-background.jpg") %>",
    uploading_image: "<%= asset_path("uploading_image.gif") %>",
    uploaded_image: "<%= asset_path("uploaded_image.png") %>",
    listview_icon: "<%=asset_path("listview-icon.png")%>",
    gridview_icon: "<%=asset_path("gridview-icon.png")%>",
    menu_icon :"<%=asset_path("button.png")%>"
  }


  $(document).click( function(){
    searchinput = $('.search-input')
    usernavclass = $('.header-user-nav')[0].className

    if (searchinput.val() && (event.target !== searchinput)) {
      searchinput.val("");
      SearchResultsStore._reset();
      return
    }

    if (
      event.target.className !== usernavclass &&
      event.target.className !== 'menu-button' &&
      !usernavclass.includes("hide")
    ) {
      $('.header-user-nav').addClass("hide");
      return
    }


  });

</script>
